/* pages/tools/football/matchAnnal/matchAnnal.wxss */
.content{
  background-color: #eee;
  padding: 20rpx;
}
.title-item{
 text-align: center;
 margin: 10rpx;
}
.title-item text{
 font-size: 24rpx;
}
.data-module {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.data-module text{
  font-size: 24rpx;
  color: #aaa;
}
.data-module .module-left {
  margin-right: 50%;
  display: flex;
  justify-content: space-between;
}

.data-module .module-right {
  margin-left: 50%;
  display: flex;
  justify-content: space-between;
}

.data-module .item-left {
  text-align: center;
  margin-left: 20%;
  font-size: 28rpx;
}

.data-module  .module-left .triangle {
  border-style: solid;
  border-width: 24rpx 24rpx 24rpx 0;
  border-color: transparent #e73e3c transparent transparent;
}

.data-module .item-right {
  margin-right: 20%;
  font-size: 28rpx;
  text-align: center;
}

.data-module .module-right .triangle {
  border-style: solid;
  border-width: 24rpx 0 24rpx 24rpx;
  border-color: transparent transparent transparent #6a64f6;
}