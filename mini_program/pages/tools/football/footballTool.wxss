/* pages/tools/football/footballTool.wxss */

.content {
  background-color: #eee;
  /* height: 1500rpx; */
  padding: 20rpx;
}

.body-view {
  line-height: 60rpx;
  height: 60rpx;
  right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  justify-content: space-between;
  color: #41be57;
}
.body-view .picker{
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.title-group .section {
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  font-weight: 700;
}

.title-group2 .section {
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  font-weight: 700;
}

.section input {
  height: 80rpx;
}

.VS {
  line-height: 80rpx;
  margin-left: 5px;
  text-align: center;
}

.title-group2 .VS {
  line-height: 120rpx;
  margin-left: 5px;
  text-align: center;
}

.section-left {
  /* background-color: #fefefe; *//* border: 1px solid gray; */
  text-align: center;
  line-height: 80rpx;
  color: #e73e3c;
}

.section-right {
  /* border: 1px solid gray; *//* background-color: #fefefe; */
  text-align: center;
  line-height: 80rpx;
  color: #6a64f6;
}

.big_score {
  display: flex;
  justify-content: space-evenly;
}

.big_score .score {
  border-radius: 50%;
  color: white;
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

.big_score .score-left {
  background-color: #e73e3c;
}

.big_score .score-right {
  background-color: #6a64f6;
}

.time-group {
  text-align: center;
}

.teamCollection {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-evenly;
  text-align: center;
  font-size: 28rpx;
}

.teamCollection .redTeam {
  color: #e73e3c;
}

.teamCollection .blueTeam {
  color: #6a64f6;
}

.picker {
  padding: 20rpx;
}

.data-module {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.data-module text {
  font-size: 24rpx;
  color: #aaa;
}

.data-module .module-left {
  margin-right: 50%;
  display: flex;
  justify-content: space-between;
}

.data-module .module-right {
  margin-left: 50%;
  display: flex;
  justify-content: space-between;
}

.data-module .item-left {
  text-align: center;
  margin-left: 20%;
  font-size: 28rpx;
}

.data-module  .module-left .triangle {
  border-style: solid;
  border-width: 24rpx 24rpx 24rpx 0;
  border-color: transparent #e73e3c transparent transparent;
}

.data-module .item-right {
  margin-right: 20%;
  font-size: 28rpx;
  text-align: center;
}

.data-module .module-right .triangle {
  border-style: solid;
  border-width: 24rpx 0 24rpx 24rpx;
  border-color: transparent transparent transparent #6a64f6;
}

.button-group {
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  /* position: fixed; */
  bottom: 80rpx;
  width: 100%;
  margin-bottom: 40rpx;
}

.button-group .button-item {
  width: 200rpx;
  margin: 10rpx;
}
