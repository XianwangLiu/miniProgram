.container {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  /* background-color: #f1f1f1; */
}

.container .ball{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: flex-start;
}

.container .ball image{
  width: 200rpx;
  height: 200rpx;
  flex: none;
}
.container .ball .item-group{
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  /* background-image: url() */
}

.container .ball .item-group .title{
  color: #41be57;
  font-size: 36rpx;
}

.container .ball .item-group .details{
  color: #aaa;
  font-size: 28rpx;
}