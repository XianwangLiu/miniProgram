.container {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  /* background-color: #f1f1f1; */
}

.container .ball{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: flex-start;
  background-color: whitesmoke;
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
  /* padding:20rpx; */
  margin-bottom: 20rpx;
  border-radius: 20rpx;

}

.container .ball image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  flex: none;
}
.container .ball .item-group{
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  /* background-image: url() */
}

.container .ball .item-group .title{
  color: #41be57;
  margin-left: 10rpx;
  font-size: 36rpx;
}

.container .ball .item-group .details{
  margin-left: 10rpx;
  color: #aaa;
  font-size: 28rpx;
}