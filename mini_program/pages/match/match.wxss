.footballMatch {
  display: flex;
  width: 680rpx;
  height: 300rpx;
  margin-left: 35rpx;
  flex-direction: row;
  background-color: whitesmoke;
  border-radius: 20rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
}

.pic {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  left: 50rpx;
  top: 30rpx;
  margin-top: 40rpx;
}

.title {
  position: relative;
  width: 300rpx;
  height: 90rpx;
  left: 160rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  margin-top: 60rpx;
}
.add{
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  color: white;
  position: fixed;
  bottom: 15rpx;
  right: 325rpx;
  background-color: blueviolet;
  width: 100rpx;
  height: 100rpx;
  border-radius: 75rpx;
  box-shadow: 0px 0px  50px rgba(0, 0, 0, 0.6);
}