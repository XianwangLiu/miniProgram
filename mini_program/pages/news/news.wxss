.outter {
  padding: 20rpx;
}

.news-group {
  width: 100%;
  height: 200rpx;
  display: flex;
  /* justify-content: flex-start; */
  border-bottom: 1px solid #ccc;
  margin-top: 20rpx;
}

.news-group .left-group {
  height: 180rpx;
  width: 240rpx;
  margin-right: 20rpx;
}

.news-group .left-group .thumbnail{
  width: 100%;
  height: 100%;
}

.right-group {
  margin-top: 10rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.right-group .title {
  font-size: 32rpx;
}

.right-group .date-author {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
  overflow: hidden;
}